<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.footballdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.footballdb.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.footballdb.ActivityRanking"
            android:label="@string/title_activity_activity_ranking" 
            android:parentActivityName="com.example.footballdb.MainActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.footballdb.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.footballdb.ActivityResult"
            android:label="@string/title_activity_activity_result" 
            android:parentActivityName="com.example.footballdb.MainActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.footballdb.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.footballdb.ResultDetailActivity"
            android:label="@string/title_activity_result_detail" 
            android:parentActivityName="com.example.footballdb.MainActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.footballdb.MainActivity"/>
        </activity>
    </application>

</manifest>
